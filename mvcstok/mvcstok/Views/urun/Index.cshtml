@using mvcstok.Models.Entity

@model List<urunler>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered" >
    <tr>
        <th>ÜRÜN ID </th>
        <th>ÜRÜN ADI </th>
        <th>ÜRÜN KATEGORİSİ</th>
        <th>ÜRÜN FİYATI </th>
        <th>MARKA</th>
        <th>STOK </th>
        <th>SİL</th>
        <th>GÜNCELLE</th>



    </tr>
    <tbody>
        @foreach(var urn in Model)
            {
        <tr>
            <td>@urn.URUNID</td>
            <td>@urn.URUNAD</td>
            <td>@urn.URUNKATEGORİ</td>
            <td>@urn.FİYAT</td>
            <td>@urn.MARKA</td>
            <td>@urn.STOK </td>
            <td> <a href="/urun/Sil/@urn.URUNID" class="btn btn-danger">SİL</a> </td>
            <td> <a class="btn btn-success">GÜNCELLE</a> </td>

        </tr>
            }
    </tbody>

    
</table>
 
<a href="/urun/UrunEkle/" class="btn btn-primary">Yeni Ürün Ekle  </a>

